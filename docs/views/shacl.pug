doctype html
html(lang="en")
    head
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css", integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC", crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js", integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM", crossorigin="anonymous")
        link(rel="stylesheet", href="style.css")
        link(rel="stylesheet", media="print" href="print.css")

    body
        div.container
            div.row.justify-content-center
                div.col-12.col-xl-8
                    h2(id='shapes') Shapes
                    each shape in shapes
                        div(id=shape.id_short).shape
                            h3
                                a(href='#' + shape.id_short).fw-normal=shape.id_short
                            div.text-success.target-class Target class:&nbsp
                                a(href=`${shape.target.link}`) #{shape.target.label}
                            div.properties
                                h4 Properties
                                each property in shape.property
                                  p path:&nbsp
                                        a(href=`${property.path.link}`) #{property.path.label}
                                        span  (#{property.name}, min. #{property.minCount})


        footer.border-top.text-center.mt-5.pt-3
            p &copy 2013-2021 Ghent University - IDLab, imec - Visit our&nbsp
                a(href='https://knows.idlab.ugent.be') website